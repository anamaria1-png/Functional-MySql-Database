        <input type="text" id="nr_telefon" name="nr_telefon">
        <script>
            function  myfunction (){
          
             let oras_id=document.getElementById("oras_id").value;
             let den_hotel=document.getElementById("den_hotel").value;
             let adresa=document.getElementById("adresa").value;
             let capacitate_maxima=document.getElementById("capacitate_maxima").value;
             let nr_telefon=document.getElementById("nr_telefon").value;
             location.href=`http://localhost:3000/inserareHotel?&oras_id=${oras_id}&den_hotel=${den_hotel}&adresa=${adresa}&capacitate_maxima=${capacitate_maxima}&nr_telefon=${nr_telefon}`;
            }
         </script>
        <button type="button" onclick="myfunction()">
            Adauga
        </button>
    </form>
   
</body>
</html>